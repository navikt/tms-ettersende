---
import { fetchDecoratorHtml } from "@navikt/nav-dekoratoren-moduler/ssr";
import Ettersending from "../components/ettersending/Ettersending";
import { getEnvironment } from "../environment";
import "./index.css";

const env = getEnvironment();
const decoratorEnv = env === "dev" ? "devNext" : env;

const Fragments = await fetchDecoratorHtml({
  env: decoratorEnv as const,
  params: {
    context: "privatperson",
  }
});
---

<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Ettersending</title>
    <link rel="preload" href="https://cdn.nav.no/aksel/@navikt/ds-css/3.1.3/index.min.css" as="style" />
    <link rel="stylesheet" href="https://cdn.nav.no/aksel/@navikt/ds-css/3.1.3/index.min.css" />
    <Fragment set:html={Fragments.DECORATOR_STYLES} />
  </head>
  <body>
    <Fragment set:html={Fragments.DECORATOR_HEADER} />
    <main>
      <div class="app">
        <Ettersending />
      </div>
    </main>
    <Fragment set:html={Fragments.DECORATOR_FOOTER} />
    <Fragment set:html={Fragments.DECORATOR_SCRIPTS} />
  </body>
</html>
